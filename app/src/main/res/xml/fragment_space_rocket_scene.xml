<?xml version="1.0" encoding="utf-8"?>
<MotionScene xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:motion="http://schemas.android.com/apk/res-auto">

    <Transition
        motion:constraintSetEnd="@+id/end_in_moon"
        motion:constraintSetStart="@+id/start"
        motion:duration="5000"
        motion:motionInterpolator="linear"
        motion:pathMotionArc="startVertical">
        <OnClick
            motion:clickAction="toggle"
            motion:targetId="@id/btn_launch" />

        <KeyFrameSet>
            <KeyAttribute
                android:rotation="0"
                android:scaleX="1"
                android:scaleY="1"
                motion:framePosition="15"
                motion:motionTarget="@+id/img_space_rocket" />
            <KeyAttribute
                android:rotation="-60"
                android:scaleX="1"
                android:scaleY="1"
                motion:framePosition="20"
                motion:motionTarget="@+id/img_space_rocket" />
            <KeyPosition
                motion:framePosition="20"
                motion:keyPositionType="pathRelative"
                motion:motionTarget="@+id/img_space_rocket"
                motion:pathMotionArc="startHorizontal"
                motion:percentX="0.997" />
            <KeyAttribute
                android:rotation="20"
                android:scaleX="1"
                android:scaleY="1"
                motion:framePosition="40"
                motion:motionTarget="@+id/img_space_rocket" />
            <KeyPosition
                motion:framePosition="40"
                motion:keyPositionType="pathRelative"
                motion:motionTarget="@+id/img_space_rocket"
                motion:pathMotionArc="startVertical"
                motion:percentX="1.114"
                motion:percentY="-0.143" />
            <KeyAttribute
                android:rotation="80"
                android:scaleX="1"
                android:scaleY="1"
                motion:framePosition="60"
                motion:motionTarget="@+id/img_space_rocket" />
            <KeyPosition
                motion:framePosition="60"
                motion:keyPositionType="pathRelative"
                motion:motionTarget="@+id/img_space_rocket"
                motion:pathMotionArc="startHorizontal"
                motion:percentX="1.257" />
            <KeyAttribute
                android:rotation="160"
                android:scaleX="1"
                android:scaleY="1"
                motion:framePosition="80"
                motion:motionTarget="@+id/img_space_rocket" />
            <KeyPosition
                motion:framePosition="80"
                motion:keyPositionType="pathRelative"
                motion:motionTarget="@+id/img_space_rocket"
                motion:pathMotionArc="startVertical"
                motion:percentX="1.114"
                motion:percentY="0.143" />
            <KeyAttribute
                android:rotation="270"
                android:scaleX="1"
                android:scaleY="1"
                motion:framePosition="100"
                motion:motionTarget="@+id/img_space_rocket" />
        </KeyFrameSet>
    </Transition>

    <ConstraintSet android:id="@+id/start">
        <Constraint
            android:id="@+id/img_space_rocket"
            android:layout_width="64dp"
            android:layout_height="64dp"
            motion:layout_constraintBottom_toTopOf="@id/btn_launch"
            motion:layout_constraintEnd_toEndOf="parent"
            motion:layout_constraintStart_toStartOf="parent" />
    </ConstraintSet>

    <ConstraintSet android:id="@+id/end_in_moon">
        <Constraint
            android:id="@+id/img_space_rocket"
            android:layout_width="64dp"
            android:layout_height="64dp"
            motion:layout_constraintBottom_toBottomOf="@id/img_moon"
            motion:layout_constraintEnd_toEndOf="parent"
            motion:layout_constraintStart_toStartOf="parent"
            motion:layout_constraintTop_toBottomOf="@id/img_moon" />
    </ConstraintSet>


</MotionScene>