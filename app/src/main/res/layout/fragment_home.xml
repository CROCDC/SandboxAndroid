<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/root"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="40dp"
        tools:context=".MainActivity">

        <Button
            android:id="@+id/btn_coronavirus"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:backgroundTint="@color/colorPrimary"
            android:text="@string/coronavirus_stats"
            app:layout_constraintBottom_toTopOf="@id/btn_rnc"
            app:layout_constraintTop_toTopOf="parent" />

        <Button
            android:id="@+id/btn_rnc"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:backgroundTint="@color/colorPrimaryDark"
            android:text="@string/btn_go_to_map"
            app:layout_constraintBottom_toTopOf="@id/btn_notifications"
            app:layout_constraintTop_toBottomOf="@id/btn_coronavirus" />

        <Button
            android:id="@+id/btn_notifications"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:text="@string/btn_go_to_notifications"
            app:layout_constraintBottom_toTopOf="@+id/btn_pokedex"
            app:layout_constraintTop_toBottomOf="@+id/btn_rnc" />

        <Button
            android:id="@+id/btn_pokedex"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:text="@string/btn_go_to_pokedex"
            app:layout_constraintBottom_toTopOf="@+id/btn_recipes"
            app:layout_constraintTop_toBottomOf="@+id/btn_notifications" />

        <Button
            android:id="@+id/btn_recipes"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:text="@string/btn_go_to_recipes"
            app:layout_constraintBottom_toTopOf="@+id/btn_custom_views"
            app:layout_constraintTop_toBottomOf="@+id/btn_pokedex" />

        <Button
            android:id="@+id/btn_custom_views"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:text="@string/btn_go_to_custom_views"
            app:layout_constraintBottom_toTopOf="@id/btn_whatsapp_utils"
            app:layout_constraintTop_toBottomOf="@+id/btn_recipes" />

        <Button
            android:id="@+id/btn_whatsapp_utils"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:text="@string/btn_go_to_whatsapp_utils"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toBottomOf="@id/btn_custom_views" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</layout>