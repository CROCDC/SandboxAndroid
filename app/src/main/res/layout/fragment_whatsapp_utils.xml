<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="40dp">

    <Button
        android:id="@+id/btn_whatsapp_messages"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:text="@string/btn_go_to_whatsapp_messages"
        app:layout_constraintBottom_toTopOf="@id/btn_whatsapp_bot"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/btn_whatsapp_bot"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:text="@string/btn_go_to_whatsapp_bot"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@id/btn_whatsapp_messages" />

</androidx.constraintlayout.widget.ConstraintLayout>
